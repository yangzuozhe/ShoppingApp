<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="shoppingDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item><!--边框-->
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <item name="android:windowBackground">@android:color/transparent</item><!--背景透明-->
        <item name="android:backgroundDimAmount">0.0</item><!--透明度 0.0f到1.0f之间。1.0完全不透明，0.0f完全透明-->
        <item name="android:windowAnimationStyle">@style/shoppingDialogAnimation</item><!--设置弹窗弹出弹入的动画效果-->
    </style>

    <style name="shoppingDialogAnimation" parent="android:Animation.Dialog">
        <!-- 弹窗弹入的动画    -->
        <item name="android:windowEnterAnimation">@anim/shopping_dialog_enter</item>
        <!--  弹窗弹出的动画-->
        <item name="android:windowExitAnimation">@anim/shopping_dialog_exit_animation</item>
    </style>


</resources>