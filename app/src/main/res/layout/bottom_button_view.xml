<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/btnHome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/btn_bg">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/ivHome"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:text="首页"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/ivHome"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:background="@drawable/home_ic" />


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/btnShoppingCar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/btn_bg">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/ivShopping"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:text="购物车"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/ivShopping"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/shopping_car_ic" />
    </RelativeLayout>

