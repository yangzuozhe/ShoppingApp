<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivShoppingImg"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/tvShoppingTitle"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@+id/ivShoppingImg"
        app:layout_constraintTop_toTopOf="@id/ivShoppingImg"
        tools:text="我是标题" />

    <TextView
        android:id="@+id/tvShoppingPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textColor="@android:color/holo_red_light"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="@+id/tvShoppingTitle"
        app:layout_constraintTop_toBottomOf="@+id/tvShoppingTitle"
        tools:text="￥20" />

    <TextView
        android:id="@+id/tvShoppingInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ellipsize="end"
        android:maxLines="2"
        app:layout_constraintEnd_toEndOf="@+id/tvShoppingTitle"
        app:layout_constraintStart_toStartOf="@+id/tvShoppingPrice"
        app:layout_constraintTop_toBottomOf="@+id/tvShoppingPrice"
        tools:text="我司介绍我司介绍我司介绍我司介绍我司介绍我司介绍我司介绍我司介绍我司介绍" />

</androidx.constraintlayout.widget.ConstraintLayout>