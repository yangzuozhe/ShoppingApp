<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivWmInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="@drawable/android_bg" />

    <TextView
        android:id="@+id/tvWmTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/ivWmInfo"
        app:layout_constraintStart_toStartOf="@+id/ivWmInfo"
        app:layout_constraintTop_toBottomOf="@+id/ivWmInfo"
        tools:text="我是标题" />

    <TextView
        android:id="@+id/tvWmPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_red_light"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="@+id/ivWmInfo"
        app:layout_constraintStart_toStartOf="@+id/ivWmInfo"
        app:layout_constraintTop_toBottomOf="@+id/tvWmTitle"
        tools:text="199" />

    <TextView
        android:id="@+id/tvWmMark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/ivWmInfo"
        app:layout_constraintStart_toStartOf="@+id/ivWmInfo"
        app:layout_constraintTop_toBottomOf="@+id/tvWmPrice"
        tools:text="asdasdsadsadasdadsad" />

</androidx.constraintlayout.widget.ConstraintLayout>